{
	"manifest_version": 2,

	"name": "Sail",
	"version": "1.1.0",
	"author": "Coder",
	"description": "Work in immutable, pre-configured development environments.",

	"browser_specific_settings": {
		"gecko": {
			"id": "sail@coder.com",
			"strict_min_version": "55.0"
		}
	},

	"background": {
		"scripts": [
			"out/background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"https://*/*"
			],
			"js": [
				"out/content.js"
			]
		}
	],
	"permissions": [
		"<all_urls>",
		"nativeMessaging",
		"storage",
		"tabs"
	],
	"icons": {
		"128": "logo128.png"
	},
	"options_page": "out/config.html",
	"icons": {
		"128": "logo128.png"
	},
	"browser_action": {
		"default_title": "Sail"
	}
}
